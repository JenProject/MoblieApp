<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingChosen"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="2dp">

        <Button
            android:id="@+id/btn_ShoppingWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="20dp"
            android:text="Słówka"
            android:textSize="30sp"
            android:background="@color/greenColor"
            android:textColor="@color/whiteColor"
            android:layout_margin="20dp"
            />

        <Button
            android:id="@+id/btn_ShoppingTalks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="20dp"
            android:text="Rozmówki"
            android:textSize="30sp"
            android:background="@color/greenColor"
            android:textColor="@color/whiteColor"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btn_ShoppingQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="3"
            android:text="Sprawdź swoją wiedzę!"
            android:textSize="30sp"
            android:background="@color/greenColor"
            android:textColor="@color/whiteColor"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/btn_BackToMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="?attr/actionModeCloseDrawable"
            android:background="@color/greenColor"
            android:layout_margin="20dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>